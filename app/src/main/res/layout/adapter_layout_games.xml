<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/navigation_bar_border">

    <ImageView
        android:id="@+id/id_home_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        tools:srcCompat="@drawable/chat_card" />

    <ImageView
        android:id="@+id/id_away_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/games_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_bhaijaan"
        android:text="VS"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/id_away_image"
        app:layout_constraintEnd_toStartOf="@+id/id_away_image"
        app:layout_constraintStart_toEndOf="@+id/id_home_image"
        app:layout_constraintTop_toTopOf="@+id/id_away_image"
        app:layout_constraintVertical_bias="0.75" />

    <TextView
        android:id="@+id/id_home_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/baloo_bhaijaan"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/id_home_image"
        app:layout_constraintStart_toStartOf="@+id/id_home_image"
        app:layout_constraintTop_toBottomOf="@+id/id_home_image" />

    <TextView
        android:id="@+id/id_away_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/baloo_bhaijaan"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/id_away_image"
        app:layout_constraintStart_toStartOf="@+id/id_away_image"
        app:layout_constraintTop_toBottomOf="@+id/id_away_image" />

    <TextView
        android:id="@+id/id_game_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_bhaijaan"
        android:text="STATUS"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/id_away_image"
        app:layout_constraintStart_toEndOf="@+id/id_home_image"
        app:layout_constraintTop_toTopOf="@+id/id_away_image"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/id_score_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_bhaijaan"
        android:text="Score 1"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/id_home_image"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/id_home_image"
        app:layout_constraintTop_toTopOf="@+id/id_home_image"
        app:layout_constraintVertical_bias="0.75" />

    <TextView
        android:id="@+id/id_score_away"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_bhaijaan"
        android:text="Score 2"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/id_away_image"
        app:layout_constraintEnd_toStartOf="@+id/id_away_image"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/id_away_image"
        app:layout_constraintVertical_bias="0.75" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_games_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD700"
    tools:context=".GamesFragment">

    <!-- TODO: Update blank fragment layout -->

    <ListView
        android:id="@+id/id_listView_games"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:divider="@color/black"
        android:dividerHeight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

    </ListView>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/text_rounded"
        android:fontFamily="@font/days_one"
        android:gravity="center"
        android:padding="10dp"
        android:text="NO\nGAMES\nTODAY"
        android:textColor="#FFD700"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/id_listView_games"
        app:layout_constraintStart_toStartOf="@+id/id_listView_games"
        app:layout_constraintTop_toTopOf="@+id/id_listView_games" />

</androidx.constraintlayout.widget.ConstraintLayout>
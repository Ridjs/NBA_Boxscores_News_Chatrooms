<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD700"
    tools:context=".PhoneLoginFragment">

    <com.hbb20.CountryCodePicker
        android:id="@+id/id_phone_login_code_picker"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:ccpDialog_backgroundColor="@color/black"
        app:ccpDialog_cornerRadius="20dp"
        app:ccpDialog_textColor="#FFD700"
        app:ccp_arrowColor="@color/black"
        app:ccp_contentColor="@color/black"
        app:ccp_defaultNameCode="US"
        app:ccp_showFlag="true"
        app:ccp_showNameCode="false"
        app:layout_constraintBottom_toBottomOf="@+id/id_text_phone_login"
        app:layout_constraintEnd_toStartOf="@+id/id_text_phone_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/id_text_phone_login" />

    <EditText
        android:id="@+id/id_text_phone_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_rounded_corner"
        android:backgroundTint="@color/black"
        android:elevation="5dp"
        android:ems="10"
        android:fontFamily="@font/days_one"
        android:hint="PHONE NUM"
        android:inputType="phone"
        android:padding="10dp"
        android:textColor="#FFD700"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/phone_icon"
        app:layout_constraintBottom_toTopOf="@+id/id_text_phone_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

    <Button
        android:id="@+id/id_btn_code_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/days_one"
        android:text="SEND CODE"
        android:textColor="#FFD700"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_text_phone_login" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/number_not_selected"
        android:fontFamily="@font/days_one"
        android:paddingHorizontal="23dp"
        android:paddingVertical="15dp"
        android:text="2"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/number_selected"
        android:fontFamily="@font/days_one"
        android:paddingHorizontal="25dp"
        android:paddingVertical="15dp"
        android:text="1"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/number_not_selected"
        android:fontFamily="@font/days_one"
        android:paddingHorizontal="23dp"
        android:paddingVertical="15dp"
        android:text="3"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>